<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<StackPane fx:id="spLeaderboard" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="480.0" minWidth="852.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="imgBackground" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true">
         <image>
            <Image url="@../artwork/welshflag.png" />
         </image>
      </ImageView>
      <BorderPane style="-fx-background-color: #D6EAF8;">
         <top>
            <BorderPane>
               <right>
                  <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="btnMainMenu" mnemonicParsing="false" onAction="#mainmenu" style="-fx-background-color: #1F618D;" text="MAIN MENU" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Button>
                        <Slider fx:id="sliderVolumeSlider" accessibleText="Volume Slider" minorTickCount="5" prefHeight="25.0" showTickMarks="true" snapToTicks="true" value="50.0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Slider>
                        <Button fx:id="btnToggleMute" accessibleText="mute" mnemonicParsing="false" onAction="#toggleMute" style="-fx-background-color: #1F618D;">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <graphic>
                              <ImageView fx:id="muteBtnImage" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../artwork/unmute.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </right>
               <left>
                  <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
                     <children>
                        <ChoiceBox fx:id="cbMapSelector" style="-fx-background-color: #1F618D;">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </ChoiceBox>
                     </children>
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin>
                  </HBox>
               </left>
            </BorderPane>
         </top>
         <bottom>
            <TextFlow BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Logged in as: " />
                  <Text fx:id="txtUsername" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
            </TextFlow>
         </bottom>
         <center>
            <TableView fx:id="leaderTable" maxWidth="500.0" BorderPane.alignment="CENTER">
            </TableView>
         </center>
      </BorderPane>
   </children>
</StackPane>
